---
import { t, type Locale } from "@/i18n/utils";
import {
  fetchGoogleReviews,
  getGoogleReviewUrl,
  type GooglePlaceInfo,
} from "@/data/google-reviews";

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const i = t(locale);
const reviewUrl = getGoogleReviewUrl();
const placeInfo: GooglePlaceInfo | null = await fetchGoogleReviews();
const reviews = placeInfo?.reviews ?? [];
const overallRating = placeInfo?.rating ?? 5.0;
const totalReviews = placeInfo?.totalReviews ?? 0;
const hasLiveReviews = reviews.length > 0;
---

<section id="reviews" class="relative border-t border-white/[0.06] py-20 sm:py-28">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <h2 class="animate-on-scroll mb-4 text-center text-3xl font-bold tracking-tight sm:text-4xl">
      {i.reviews.title}
    </h2>
    <p class="animate-on-scroll mx-auto mb-6 max-w-2xl text-center text-muted-foreground">
      {i.reviews.subtitle}
    </p>

    {/* Overall Google Rating */}
    {hasLiveReviews && (
      <div class="animate-on-scroll mb-12 flex flex-col items-center gap-2">
        <div class="flex items-center gap-3">
          <svg class="h-7 w-7" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92a5.06 5.06 0 0 1-2.2 3.32v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.1z" fill="#4285F4"/>
            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
          </svg>
          <span class="text-3xl font-bold text-foreground">{overallRating.toFixed(1)}</span>
          <div class="flex items-center gap-0.5">
            {Array.from({ length: 5 }).map((_, idx) => (
              <svg
                class={`h-5 w-5 ${idx < Math.round(overallRating) ? "text-yellow-400" : "text-white/20"}`}
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>
          <span class="text-sm text-muted-foreground">
            ({totalReviews} {i.reviews.reviews_count})
          </span>
        </div>
      </div>
    )}

    {hasLiveReviews ? (
      /* Live Google reviews carousel */
      <div class="animate-on-scroll relative">
        <div
          id="reviews-slider"
          class="flex snap-x snap-mandatory gap-6 overflow-x-auto scroll-smooth pb-4 scrollbar-hide"
        >
          {reviews.map((review, idx) => (
            <div
              class="w-[320px] flex-shrink-0 snap-start rounded-xl border border-white/[0.06] bg-white/[0.03] p-6 transition-all hover:border-indigo-500/20 hover:bg-white/[0.05] sm:w-[380px]"
              style={`transition-delay: ${idx * 80}ms`}
            >
              <div class="mb-4 flex items-center gap-3">
                {review.profilePhotoUrl ? (
                  <img
                    src={review.profilePhotoUrl}
                    alt={review.authorName}
                    class="h-10 w-10 rounded-full object-cover"
                    width="40"
                    height="40"
                    loading="lazy"
                    referrerpolicy="no-referrer"
                  />
                ) : (
                  <div class="flex h-10 w-10 items-center justify-center rounded-full bg-indigo-500/20 text-sm font-bold text-indigo-400">
                    {review.authorName.charAt(0).toUpperCase()}
                  </div>
                )}
                <div>
                  <p class="text-sm font-semibold text-foreground">{review.authorName}</p>
                  <p class="text-xs text-muted-foreground">{review.relativeTimeDescription}</p>
                </div>
              </div>
              <div class="mb-3 flex items-center gap-0.5">
                {Array.from({ length: 5 }).map((_, starIdx) => (
                  <svg
                    class={`h-4 w-4 ${starIdx < review.rating ? "text-yellow-400" : "text-white/20"}`}
                    viewBox="0 0 20 20"
                    fill="currentColor"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>
              <p class="text-[0.925rem] leading-relaxed text-muted-foreground line-clamp-5">
                {review.text}
              </p>
            </div>
          ))}
        </div>

        {/* Scroll buttons */}
        {reviews.length > 2 && (
          <>
            <button
              id="reviews-prev"
              class="absolute -left-3 top-1/2 z-10 hidden -translate-y-1/2 rounded-full border border-white/[0.1] bg-background/90 p-2 text-muted-foreground shadow-lg backdrop-blur transition-colors hover:text-foreground sm:block"
              aria-label="Previous"
            >
              <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="15 18 9 12 15 6" />
              </svg>
            </button>
            <button
              id="reviews-next"
              class="absolute -right-3 top-1/2 z-10 hidden -translate-y-1/2 rounded-full border border-white/[0.1] bg-background/90 p-2 text-muted-foreground shadow-lg backdrop-blur transition-colors hover:text-foreground sm:block"
              aria-label="Next"
            >
              <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="9 18 15 12 9 6" />
              </svg>
            </button>
          </>
        )}
      </div>
    ) : (
      /* Fallback when no API key is configured */
      <div class="animate-on-scroll mx-auto max-w-lg rounded-xl border border-white/[0.06] bg-white/[0.03] p-8 text-center">
        <svg class="mx-auto mb-4 h-12 w-12 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
        </svg>
        <p class="mb-4 text-muted-foreground">{i.reviews.fallback_text}</p>
        <a
          href={reviewUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 rounded-lg border border-white/[0.1] bg-white/[0.05] px-5 py-2.5 text-sm font-medium text-foreground transition-colors hover:border-indigo-500/30 hover:bg-white/[0.08]"
        >
          <svg class="h-5 w-5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92a5.06 5.06 0 0 1-2.2 3.32v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.1z" fill="#4285F4"/>
            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
          </svg>
          {i.reviews.see_on_google}
        </a>
      </div>
    )}

    {/* CTA to leave a review */}
    <div class="animate-on-scroll mt-10 text-center">
      <a
        href={reviewUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 rounded-lg bg-gradient-to-r from-indigo-600 to-indigo-400 px-6 py-3 text-sm font-semibold text-white shadow-lg shadow-indigo-500/25 transition-all hover:shadow-indigo-500/40 hover:brightness-110"
      >
        <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
        </svg>
        {i.reviews.leave_review}
      </a>
    </div>
  </div>
</section>

<style>
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
  .line-clamp-5 {
    display: -webkit-box;
    -webkit-line-clamp: 5;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

<script>
  const slider = document.getElementById("reviews-slider");
  const prevBtn = document.getElementById("reviews-prev");
  const nextBtn = document.getElementById("reviews-next");

  if (slider && prevBtn && nextBtn) {
    const scrollAmount = 400;

    prevBtn.addEventListener("click", () => {
      slider.scrollBy({ left: -scrollAmount, behavior: "smooth" });
    });

    nextBtn.addEventListener("click", () => {
      slider.scrollBy({ left: scrollAmount, behavior: "smooth" });
    });
  }
</script>
